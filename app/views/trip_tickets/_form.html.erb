      <% end %>
    </div>
    <div class="field">
      <%= f.label :trip_notes %>
      <% if can? :edit, @trip_ticket %>
        <%= f.text_area :trip_notes %>
      <% else %>
        <%= @trip_ticket.trip_notes %>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :expire_at, "Trip Expires At" %>
      <% if can? :edit, @trip_ticket %>

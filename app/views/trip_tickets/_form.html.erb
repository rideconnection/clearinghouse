      <%= link_to (@trip_ticket.persisted? ? @trip_ticket : trip_tickets_path), :class => "button button-cancel" do %>
        <span>Cancel</span>
      <% end %>
      <%= f.submit :class => "button" %>
    </div>
  <% end %>
<% end %>


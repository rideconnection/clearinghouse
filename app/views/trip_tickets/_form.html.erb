    </div>
    <div class="field">
      <%= f.label :scheduling_priority, class: "required" %>
      <% if can? :edit, @trip_ticket %>
        <%= f.select :scheduling_priority, TripTicket::SCHEDULING_PRIORITY.invert, :include_blank => true %>
      <% else %>
